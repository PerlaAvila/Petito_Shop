
    <h1>PETITO</h1>

 
      <!--Shopping Cart table-->
      <div class="table-responsive">
          <table class="table product-table table-half">
              <!--Table head-->
              <thead>
                  <tr>
                      <th></th>
                      <th>Product</th>
                      <th>Color</th>
                      <th>Size</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Amount</th>
                      <th></th>
                  </tr>
              </thead>
              <!--/Table head-->

              <!--Table body-->
              <tbody>

    <% @products.each do |product| %>
                  <!--First row-->
                  <tr id="<%= product.name %>" value="<%= product.name %>"  >
                      <td>
                        <th scope="row">
                          <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/shoes.jpg" alt="" class="img-fluid img-size">
                        </th>
                      </td>
                      <td>Blue</td>
                      <td>38</td>
                      <td id="<%= product.price %>" value="<%= product.price %>">$<%= product.price%></td>
                      <td>
                          <input type="hidden" name="stock" id="stock-<%= product.id %>" value="<%= product.stock %>">
                          <input type="hidden" name="price" id="price-<%= product.id %>" value="<%= product.price %>">
                          <div class="btn-group" data-toggle="buttons">
                              <%= link_to '-', '#', class: 'btn btn-sm btn-primary btn-rounded btn-operators', data: { id: product.id, operation: "-" } %>
                              <span id="quantity-<%= product.id %>" class="btn btn-sm btn-default btn-rounded">0</span>
                              <%= link_to '+', '#', class: 'btn btn-sm btn-primary btn-rounded btn-operators', data: { id: product.id, operation: "+"} %>
                          </div>
                      </td>
                      <td id="amount-<%= product.id %>" ></td>
                      <td>
                          <button type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Remove item">X
                          </button>
                      </td>
                  </tr>
                  <!--/First row-->
    <% end %>

                  <!--Fourth row-->
                  <tr>
                      <td colspan="3"></td>
                      <td>
                          <h4><strong>Total</strong></h4></td>
                      <td>
                          <h4><strong>$1200</strong></h4></td>
                      <td colspan="3"><button type="button" class="btn btn-primary">Complete purchase  <i class="fa fa-angle-right right"></i></button></td>
                  </tr>
                  <!--/Fourth row-->
              </tbody>
              <!--/Table body-->
          </table>
      </div>
      <!--/Shopping Cart table-->







